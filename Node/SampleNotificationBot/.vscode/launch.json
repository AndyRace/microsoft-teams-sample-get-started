    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\app.js",            
            "env": {
                "NODE_ENV": "development",
                "MICROSOFT_APP_ID": "", //Bot ID from Bot Framework
                "MICROSOFT_APP_PASSWORD": "", //Bot password from Bot Framework
                "BASE_URI": "" //Host name for your tab/application
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Teams Debug",
            "program": "${workspaceRoot}\\app.js",
            "env": {
                "NODE_ENV": "development",
                "MICROSOFT_APP_ID": "[YOUR_BOT_ID_HERE]", //Bot ID from Bot Framework
                "MICROSOFT_APP_PASSWORD": "[YOUR_BOT_PASSWORD_HERE]", //Bot password from Bot Framework
                "BASE_URI": "[YOUR_HOST_URI_HERE]" //base name for your tab/application
            }
        }
    ]
}


